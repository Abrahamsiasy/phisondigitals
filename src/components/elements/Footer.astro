---
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
---

<div class="mt-16"></div>
<footer class="relative bg-gradient-to-tr from-gray-100 to-gray-200 dark:from-gray-900 dark:to-transparent pt-16 rounded-t-3xl">
    <Container className="pb-8 relative">
        <div class="flex flex-col md:flex-row justify-between items-center gap-6">
            <!-- Logo and Company Info -->
            <div class="flex items-center gap-3">
                <a href="/" class="relative flex items-center gap-3">
                    <div class="relative w-8 h-8 overflow-hidden rounded-xl bg-white dark:bg-gray-800 shadow-lg p-1">
                        <img 
                            src="/logos/phison-logo.png" 
                            alt="Phison Digitals Logo" 
                            class="w-full h-full object-contain"
                        />
                    </div>
                    <div class="inline-flex text-xl font-bold text-heading-1">
                        Phison Digitals
                    </div>
                </a>
                <div class="hidden md:block text-heading-3">|</div>
                <div class="text-sm text-heading-3">
                    <a href="mailto:phisondigitals@gmail.com" class="hover:text-primary transition-colors">phisondigitals@gmail.com</a>
                </div>
            </div>

            <!-- Social Links -->
            <div class="flex items-center gap-4 text-heading-3">
                <a href="#" class="transition hover:text-primary hover:scale-105 p-2 rounded-lg hover:bg-white/10" title="Facebook">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="w-5 h-5" viewBox="0 0 16 16">
                        <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"/>
                    </svg>
                </a>

                <a href="#" class="transition hover:text-primary hover:scale-105 p-2 rounded-lg hover:bg-white/10" title="LinkedIn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="w-5 h-5" viewBox="0 0 16 16">
                        <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"/>
                    </svg>
                </a>

                <a href="#" class="transition hover:text-primary hover:scale-105 p-2 rounded-lg hover:bg-white/10" title="Telegram">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="w-5 h-5" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.287 3.099A.589.589 0 0 0 7.853 3H6.5a.5.5 0 0 0-.5.5v1.382c0 .351.223.659.575.707l1.5.5a.5.5 0 0 0 .85-.25l.5-2.5a.5.5 0 0 0-.287-.575zM8.5 6.5a.5.5 0 0 0-1 0v1.5a.5.5 0 0 0 1 0V6.5zm0 2.5a.5.5 0 0 0-1 0v1.5a.5.5 0 0 0 1 0V9z"/>
                    </svg>
                </a>
            </div>
        </div>
    </Container>
    
    <!-- Copyright -->
    <div class="bg-gradient-to-tl from-box-bg py-4 relative">
        <Container>
            <div class="text-center text-sm text-heading-3">
                &copy; <span id="year"></span> Phison Digitals. All rights reserved
            </div>
        </Container>
    </div>
</footer>
