---
import BtnLink from "../shared/BtnLink.astro";
import Container from "../shared/Container.astro";
import  Navitem from "../shared/Navitem.astro";

type NavItem = {
    href: string;
    text: string;
    dropdown?: { href: string; text: string }[];
};

const navItems: NavItem[] = [
    {
        href:"/",
        text:"Home"
    },
    {
        href:"/#about-us",
        text:"Overview"
    },
    {
        href:"/#services",
        text:"Services",
        dropdown: [
            { href: "/services/strategy-development", text: "Strategy Development" },
            { href: "/services/content-creation", text: "Content Creation" },
            { href: "/services/community-engagement", text: "Community Engagement" },
            { href: "/services/social-media-advertising", text: "Social Media Advertising" },
            { href: "/services/analytics-reporting", text: "Analytics and Reporting" },
            { href: "/services/additional-services", text: "Additional Services" }
        ]
    },

    {
        href:"/#portfolio",
        text:"Packages"
    },
    {
        href:"/media",
        text:"Media"
    },
    {
        href:"/#cta",
        text:"Contact"
    },
]
---

<header class="fixed inset-x-0 top-0 z-50 transition-all duration-300" id="navbar">
    <!-- Background blur effect -->
    <div class="absolute inset-0 bg-white/80 dark:bg-gray-900/80 backdrop-blur-xl border-b border-gray-200/50 dark:border-gray-700/50"></div>
    
    <Container>
        <nav class="relative flex items-center justify-between h-16 lg:h-20">
            <!-- Logo -->
            <div class="flex items-center">
                <a href="/" class="flex items-center gap-3 group">
                    <div class="relative w-10 h-10 lg:w-12 lg:h-12 overflow-hidden rounded-2xl shadow-lg group-hover:shadow-xl transition-all duration-300 group-hover:scale-105 bg-white dark:bg-gray-800 p-1">
                        <img 
                            src="/logos/phison-logo.png" 
                            alt="Phison Digitals Logo" 
                            width="48"
                            height="48"
                            class="w-full h-full object-contain"
                        />
                    </div>
                    <div class="flex flex-col">
                        <span class="text-xl lg:text-2xl font-bold bg-gradient-to-r from-[#1E6DEB] to-[#0F2E5C] bg-clip-text text-transparent dark:bg-none dark:text-[#EAF2FF]">
                            Phison Digitals
                        </span>
                        <span class="text-xs text-gray-500 dark:text-gray-400 -mt-1">Social Media Agency</span>
                    </div>
                </a>
            </div>

            <!-- Desktop Navigation -->
            <div class="hidden lg:flex items-center space-x-8">
                <ul class="flex items-center space-x-8">
                    {navItems.map(item => {
                        if (item.dropdown) {
                            return (
                                <li class="relative group">
                                    <button class="flex items-center gap-2 px-4 py-2 text-gray-700 dark:text-gray-300 hover:text-[#1E6DEB] dark:hover:text-[#1E6DEB] font-medium transition-all duration-300 group-hover:scale-105">
                                        {item.text}
                                        <svg class="w-4 h-4 transition-transform duration-300 group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                        </svg>
                                    </button>
                                    
                                    <!-- Dropdown Menu -->
                                    <div class="absolute top-full left-0 mt-2 w-72 bg-white dark:bg-gray-800 rounded-2xl shadow-2xl border border-gray-200 dark:border-gray-700 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform scale-95 group-hover:scale-100 origin-top-left">
                                        <div class="p-2">
                                            {item.dropdown.map((dropdownItem, index) => (
                                                <a 
                                                    href={dropdownItem.href} 
                                                    class="flex items-center px-4 py-3 text-gray-700 dark:text-gray-300 hover:text-[#1E6DEB] dark:hover:text-[#1E6DEB] hover:bg-gray-50 dark:hover:bg-gray-700/50 rounded-xl transition-all duration-300 group/item"
                                                >
                                                    <div class="w-2 h-2 bg-gradient-to-r from-[#1E6DEB] to-[#0F2E5C] rounded-full mr-3 group-hover/item:scale-150 transition-transform duration-300"></div>
                                                    <span class="font-medium">{dropdownItem.text}</span>
                                                    <svg class="w-4 h-4 ml-auto opacity-0 group-hover/item:opacity-100 transform translate-x-2 group-hover/item:translate-x-0 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                                    </svg>
                                                </a>
                                            ))}
                                        </div>
                                    </div>
                                </li>
                            );
                        } else {
                            return (
                                <li>
                                    <a 
                                        href={item.href} 
                                        class="px-4 py-2 text-gray-700 dark:text-gray-300 hover:text-[#1E6DEB] dark:hover:text-[#1E6DEB] font-medium transition-all duration-300 hover:scale-105 relative group"
                                    >
                                        {item.text}
                                        <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-[#1E6DEB] to-[#0F2E5C] transition-all duration-300 group-hover:w-full"></span>
                                    </a>
                                </li>
                            );
                        }
                    })}
                </ul>
                
                <!-- CTA Button -->
                <a 
                    href="tel:+251989915436" 
                    aria-label="Call Phison Digitals now"
                    class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-[#1E6DEB] to-[#1554B3] dark:bg-none dark:bg-[#1E6DEB] dark:hover:bg-[#1554B3] text-white font-semibold rounded-full shadow-lg hover:shadow-xl transform hover:scale-105 hover:translate-y-[-2px] transition-all duration-300"
                >
                    <span>Call Now</span>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </a>
            </div>

            <!-- Right side controls -->
            <div class="flex items-center gap-4">
                <!-- Theme Toggle -->
                <button 
                    data-switch-theme 
                    class="relative p-2 text-gray-700 dark:text-gray-300 hover:text-[#1E6DEB] dark:hover:text-[#1E6DEB] rounded-xl hover:bg-gray-100 dark:hover:bg-gray-800 transition-all duration-300 group"
                >
                    <div class="absolute inset-0 bg-gradient-to-r from-[#1E6DEB] to-[#0F2E5C] rounded-xl opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
                    <svg class="w-6 h-6 relative z-10 dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z"></path>
                    </svg>
                    <svg class="w-6 h-6 relative z-10 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z"></path>
                    </svg>
                    <span class="sr-only">Toggle theme</span>
                </button>
                
                <!-- Mobile Menu Button -->
                <button 
                    id="mobile-menu-btn"
                    class="lg:hidden relative p-2 text-gray-700 dark:text-gray-300 hover:text-[#1E6DEB] dark:hover:text-[#1E6DEB] rounded-xl hover:bg-gray-100 dark:hover:bg-gray-800 transition-all duration-300 group"
                >
                    <div class="absolute inset-0 bg-gradient-to-r from-[#1E6DEB] to-[#0F2E5C] rounded-xl opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
                    <div class="relative z-10 flex flex-col gap-1.5">
                        <span class="w-6 h-0.5 bg-current rounded-full transition-all duration-300" id="line1"></span>
                        <span class="w-6 h-0.5 bg-current rounded-full transition-all duration-300" id="line2"></span>
                        <span class="w-6 h-0.5 bg-current rounded-full transition-all duration-300" id="line3"></span>
                    </div>
                    <span class="sr-only">Toggle menu</span>
                </button>
            </div>
        </nav>
    </Container>

    <!-- Mobile Navigation Overlay -->
    <div id="mobile-overlay" class="fixed inset-0 bg-black/50 backdrop-blur-sm opacity-0 invisible transition-all duration-300 lg:hidden z-40"></div>
    
    <!-- Mobile Navigation Menu -->
    <div id="mobile-menu" class="fixed top-0 right-0 w-80 h-full bg-white dark:bg-gray-900 shadow-2xl transform translate-x-full transition-transform duration-300 ease-out lg:hidden z-50">
        <div class="flex flex-col h-full">
            <!-- Mobile Header -->
            <div class="flex items-center justify-between p-6 border-b border-gray-200 dark:border-gray-700">
                <div class="flex items-center gap-3">
                    <div class="w-8 h-8 bg-white dark:bg-gray-800 rounded-xl p-1 shadow-lg">
                        <img 
                            src="/logos/phison-logo.png" 
                            alt="Phison Digitals Logo" 
                            width="32"
                            height="32"
                            class="w-full h-full object-contain"
                        />
                    </div>
                    <span class="text-lg font-bold text-gray-900 dark:text-white">Menu</span>
                </div>
                <button id="close-mobile-menu" class="p-2 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            
            <!-- Mobile Navigation Items -->
            <div class="flex-1 p-6 overflow-y-auto">
                <ul class="space-y-4">
                    {navItems.map(item => {
                        if (item.dropdown) {
                            return (
                                <li class="mobile-dropdown">
                                    <button class="mobile-dropdown-btn flex items-center justify-between w-full p-4 text-left text-gray-700 dark:text-gray-300 hover:text-[#1E6DEB] dark:hover:text-[#1E6DEB] hover:bg-gray-50 dark:hover:bg-gray-800 rounded-xl transition-all duration-300">
                                        <span class="font-medium">{item.text}</span>
                                        <svg class="w-5 h-5 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                        </svg>
                                    </button>
                                    <div class="mobile-dropdown-content hidden pl-4 space-y-2 mt-2">
                                        {item.dropdown.map(dropdownItem => (
                                            <a 
                                                href={dropdownItem.href} 
                                                class="block p-3 text-gray-600 dark:text-gray-400 hover:text-[#1E6DEB] dark:hover:text-[#1E6DEB] hover:bg-gray-50 dark:hover:bg-gray-800 rounded-lg transition-all duration-300"
                                            >
                                                {dropdownItem.text}
                                            </a>
                                        ))}
                                    </div>
                                </li>
                            );
                        } else {
                            return (
                                <li>
                                    <a 
                                        href={item.href} 
                                        class="block p-4 text-gray-700 dark:text-gray-300 hover:text-[#1E6DEB] dark:hover:text-[#1E6DEB] hover:bg-gray-50 dark:hover:bg-gray-800 rounded-xl transition-all duration-300 font-medium"
                                    >
                                        {item.text}
                                    </a>
                                </li>
                            );
                        }
                    })}
                </ul>
            </div>
            
            <!-- Mobile CTA -->
            <div class="p-6 border-t border-gray-200 dark:border-gray-700">
                <a 
                    href="tel:+251989915436" 
                    aria-label="Call Phison Digitals now"
                    class="block w-full text-center px-6 py-4 bg-gradient-to-r from-[#1E6DEB] to-[#1554B3] dark:bg-none dark:bg-[#1E6DEB] dark:hover:bg-[#1554B3] text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300"
                >
                    Call Now
                </a>
            </div>
        </div>
    </div>
</header>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Navbar scroll effect
        const navbar = document.getElementById('navbar');
        let lastScrollTop = 0;
        
        if (navbar) {
            window.addEventListener('scroll', function() {
                const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
                
                if (scrollTop > 100) {
                    navbar.classList.add('bg-white/95', 'dark:bg-gray-900/95', 'shadow-lg');
                    navbar.classList.remove('bg-white/80', 'dark:bg-gray-900/80');
                } else {
                    navbar.classList.remove('bg-white/95', 'dark:bg-gray-900/95', 'shadow-lg');
                    navbar.classList.add('bg-white/80', 'dark:bg-gray-900/80');
                }
                
                lastScrollTop = scrollTop;
            });
        }
        
        // Mobile menu functionality
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileOverlay = document.getElementById('mobile-overlay');
        const closeMobileMenu = document.getElementById('close-mobile-menu');
        const line1 = document.getElementById('line1');
        const line2 = document.getElementById('line2');
        const line3 = document.getElementById('line3');
        
        function openMobileMenu() {
            if (mobileMenu && mobileOverlay && line1 && line2 && line3) {
                mobileMenu.classList.remove('translate-x-full');
                mobileMenu.classList.add('translate-x-0');
                mobileOverlay.classList.remove('opacity-0', 'invisible');
                mobileOverlay.classList.add('opacity-100', 'visible');
                
                // Animate hamburger
                line1.classList.add('rotate-45', 'translate-y-2');
                line2.classList.add('opacity-0');
                line3.classList.add('-rotate-45', '-translate-y-2');
                
                // Prevent body scroll
                document.body.style.overflow = 'hidden';
            }
        }
        
        function closeMobileMenuFunc() {
            if (mobileMenu && mobileOverlay && line1 && line2 && line3) {
                mobileMenu.classList.remove('translate-x-0');
                mobileMenu.classList.add('translate-x-full');
                mobileOverlay.classList.remove('opacity-100', 'visible');
                mobileOverlay.classList.add('opacity-0', 'invisible');
                
                // Reset hamburger
                line1.classList.remove('rotate-45', 'translate-y-2');
                line2.classList.remove('opacity-0');
                line3.classList.remove('-rotate-45', '-translate-y-2');
                
                // Restore body scroll
                document.body.style.overflow = '';
            }
        }
        
        // Event listeners
        if (mobileMenuBtn) {
            mobileMenuBtn.addEventListener('click', openMobileMenu);
        }
        
        if (closeMobileMenu) {
            closeMobileMenu.addEventListener('click', closeMobileMenuFunc);
        }
        
        if (mobileOverlay) {
            mobileOverlay.addEventListener('click', closeMobileMenuFunc);
        }
        
        // Close menu when clicking on navigation links
        const mobileNavLinks = document.querySelectorAll('#mobile-menu a');
        mobileNavLinks.forEach(link => {
            link.addEventListener('click', closeMobileMenuFunc);
        });
        
        // Mobile dropdown functionality
        const mobileDropdownBtns = document.querySelectorAll('.mobile-dropdown-btn');
        mobileDropdownBtns.forEach(button => {
            button.addEventListener('click', function(this: Element) {
                const dropdown = this.nextElementSibling as HTMLElement;
                const icon = this.querySelector('svg') as SVGElement;
                
                if (dropdown && dropdown.classList.contains('hidden')) {
                    dropdown.classList.remove('hidden');
                    if (icon) icon.classList.add('rotate-180');
                } else if (dropdown) {
                    dropdown.classList.add('hidden');
                    if (icon) icon.classList.remove('rotate-180');
                }
            });
        });
        
        // Close menu on escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeMobileMenuFunc();
            }
        });
    });
</script>