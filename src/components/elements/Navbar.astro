---
import BtnLink from "../shared/BtnLink.astro";
import Container from "../shared/Container.astro";
import  Navitem from "../shared/Navitem.astro";

const navItems = [
    {
        href:"/",
        text:"Home"
    },
    {
        href:"#services",
        text:"Services",
        dropdown: [
            { href: "/services/foreign-consulting", text: "Foreign Consulting" },
            { href: "/services/mobile-app-development", text: "Website Development" },
            { href: "/services/software-development", text: "Software Development" },
            { href: "/services/custom-app-customization", text: "Custom App Customization" },
            { href: "/services/ojs-support", text: "OJS Support" },
            { href: "/services/ecommerce-solutions", text: "E-commerce Solutions" }
        ]
    },
    {
        href:"#about-us",
        text:"About"
    },
    {
        href:"#features",
        text:"Features"
    },
]
---

<header class="fixed inset-x-0 top-0 z-50 transition-all duration-300" id="navbar">
    <!-- Background blur effect -->
    <div class="absolute inset-0 bg-white/80 dark:bg-gray-900/80 backdrop-blur-xl border-b border-gray-200/50 dark:border-gray-700/50"></div>
    
    <Container>
        <nav class="relative flex items-center justify-between h-16 lg:h-20">
            <!-- Logo -->
            <div class="flex items-center">
                <a href="/" class="flex items-center gap-3 group">
                    <div class="relative w-10 h-10 lg:w-12 lg:h-12 overflow-hidden rounded-2xl bg-gradient-to-br from-[#022E01] to-[#4ade80] shadow-lg group-hover:shadow-xl transition-all duration-300 group-hover:scale-105">
                        <div class="absolute inset-0 bg-gradient-to-br from-[#022E01] to-[#4ade80] opacity-90"></div>
                        <div class="absolute top-1 right-1 w-3 h-3 bg-white/20 rounded-full"></div>
                        <div class="absolute bottom-1 left-1 w-2 h-2 bg-white/30 rounded-full"></div>
                        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-1.5 h-1.5 bg-white rounded-full"></div>
                    </div>
                    <div class="flex flex-col">
                        <span class="text-xl lg:text-2xl font-bold bg-gradient-to-r from-[#022E01] to-[#4ade80] bg-clip-text text-transparent">
                            GojoTech
                        </span>
                        <span class="text-xs text-gray-500 dark:text-gray-400 -mt-1">PLC</span>
                    </div>
                </a>
            </div>

            <!-- Desktop Navigation -->
            <div class="hidden lg:flex items-center space-x-8">
                <ul class="flex items-center space-x-8">
                    {navItems.map(item => {
                        if (item.dropdown) {
                            return (
                                <li class="relative group">
                                    <button class="flex items-center gap-2 px-4 py-2 text-gray-700 dark:text-gray-300 hover:text-[#022E01] dark:hover:text-[#4ade80] font-medium transition-all duration-300 group-hover:scale-105">
                                        {item.text}
                                        <svg class="w-4 h-4 transition-transform duration-300 group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                        </svg>
                                    </button>
                                    
                                    <!-- Dropdown Menu -->
                                    <div class="absolute top-full left-0 mt-2 w-72 bg-white dark:bg-gray-800 rounded-2xl shadow-2xl border border-gray-200 dark:border-gray-700 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform scale-95 group-hover:scale-100 origin-top-left">
                                        <div class="p-2">
                                            {item.dropdown.map((dropdownItem, index) => (
                                                <a 
                                                    href={dropdownItem.href} 
                                                    class="flex items-center px-4 py-3 text-gray-700 dark:text-gray-300 hover:text-[#022E01] dark:hover:text-[#4ade80] hover:bg-gray-50 dark:hover:bg-gray-700/50 rounded-xl transition-all duration-300 group/item"
                                                >
                                                    <div class="w-2 h-2 bg-gradient-to-r from-[#022E01] to-[#4ade80] rounded-full mr-3 group-hover/item:scale-150 transition-transform duration-300"></div>
                                                    <span class="font-medium">{dropdownItem.text}</span>
                                                    <svg class="w-4 h-4 ml-auto opacity-0 group-hover/item:opacity-100 transform translate-x-2 group-hover/item:translate-x-0 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                                    </svg>
                                                </a>
                                            ))}
                                        </div>
                                    </div>
                                </li>
                            );
                        } else {
                            return (
                                <li>
                                    <a 
                                        href={item.href} 
                                        class="px-4 py-2 text-gray-700 dark:text-gray-300 hover:text-[#022E01] dark:hover:text-[#4ade80] font-medium transition-all duration-300 hover:scale-105 relative group"
                                    >
                                        {item.text}
                                        <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-[#022E01] to-[#4ade80] transition-all duration-300 group-hover:w-full"></span>
                                    </a>
                                </li>
                            );
                        }
                    })}
                </ul>
                
                <!-- CTA Button -->
                <a 
                    href="#cta" 
                    class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-[#022E01] to-[#1a5d1a] text-white font-semibold rounded-full shadow-lg hover:shadow-xl transform hover:scale-105 hover:translate-y-[-2px] transition-all duration-300"
                >
                    <span>Get Consultation</span>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </a>
            </div>

            <!-- Right side controls -->
            <div class="flex items-center gap-4">
                <!-- Theme Toggle -->
                <button 
                    data-switch-theme 
                    class="relative p-2 text-gray-700 dark:text-gray-300 hover:text-[#022E01] dark:hover:text-[#4ade80] rounded-xl hover:bg-gray-100 dark:hover:bg-gray-800 transition-all duration-300 group"
                >
                    <div class="absolute inset-0 bg-gradient-to-r from-[#022E01] to-[#4ade80] rounded-xl opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
                    <svg class="w-6 h-6 relative z-10 dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z"></path>
                    </svg>
                    <svg class="w-6 h-6 relative z-10 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z"></path>
                    </svg>
                    <span class="sr-only">Toggle theme</span>
                </button>
                
                <!-- Mobile Menu Button -->
                <button 
                    data-toggle-nav 
                    data-open-nav="false" 
                    class="lg:hidden relative p-2 text-gray-700 dark:text-gray-300 hover:text-[#022E01] dark:hover:text-[#4ade80] rounded-xl hover:bg-gray-100 dark:hover:bg-gray-800 transition-all duration-300 group"
                >
                    <div class="absolute inset-0 bg-gradient-to-r from-[#022E01] to-[#4ade80] rounded-xl opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
                    <div class="relative z-10 flex flex-col gap-1.5">
                        <span class="w-6 h-0.5 bg-current rounded-full transition-all duration-300" id="line1"></span>
                        <span class="w-6 h-0.5 bg-current rounded-full transition-all duration-300" id="line2"></span>
                        <span class="w-6 h-0.5 bg-current rounded-full transition-all duration-300" id="line3"></span>
                    </div>
                    <span class="sr-only">Toggle menu</span>
                </button>
            </div>
        </nav>
    </Container>

    <!-- Mobile Navigation Overlay -->
    <div data-nav-overlay aria-hidden="true" class="fixed inset-0 bg-black/50 backdrop-blur-sm opacity-0 invisible transition-all duration-300 lg:hidden"></div>
    
    <!-- Mobile Navigation Menu -->
    <div data-navbar class="fixed top-0 right-0 w-80 h-full bg-white dark:bg-gray-900 shadow-2xl transform translate-x-full transition-transform duration-300 ease-out lg:hidden">
        <div class="flex flex-col h-full">
            <!-- Mobile Header -->
            <div class="flex items-center justify-between p-6 border-b border-gray-200 dark:border-gray-700">
                <div class="flex items-center gap-3">
                    <div class="w-8 h-8 bg-gradient-to-br from-[#022E01] to-[#4ade80] rounded-xl"></div>
                    <span class="text-lg font-bold text-gray-900 dark:text-white">Menu</span>
                </div>
                <button data-toggle-nav class="p-2 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            
            <!-- Mobile Navigation Items -->
            <div class="flex-1 p-6">
                <ul class="space-y-4">
                    {navItems.map(item => {
                        if (item.dropdown) {
                            return (
                                <li class="mobile-dropdown">
                                    <button class="flex items-center justify-between w-full p-4 text-left text-gray-700 dark:text-gray-300 hover:text-[#022E01] dark:hover:text-[#4ade80] hover:bg-gray-50 dark:hover:bg-gray-800 rounded-xl transition-all duration-300">
                                        <span class="font-medium">{item.text}</span>
                                        <svg class="w-5 h-5 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                        </svg>
                                    </button>
                                    <div class="mobile-dropdown-content hidden pl-4 space-y-2">
                                        {item.dropdown.map(dropdownItem => (
                                            <a 
                                                href={dropdownItem.href} 
                                                class="block p-3 text-gray-600 dark:text-gray-400 hover:text-[#022E01] dark:hover:text-[#4ade80] hover:bg-gray-50 dark:hover:bg-gray-800 rounded-lg transition-all duration-300"
                                            >
                                                {dropdownItem.text}
                                            </a>
                                        ))}
                                    </div>
                                </li>
                            );
                        } else {
                            return (
                                <li>
                                    <a 
                                        href={item.href} 
                                        class="block p-4 text-gray-700 dark:text-gray-300 hover:text-[#022E01] dark:hover:text-[#4ade80] hover:bg-gray-50 dark:hover:bg-gray-800 rounded-xl transition-all duration-300 font-medium"
                                    >
                                        {item.text}
                                    </a>
                                </li>
                            );
                        }
                    })}
                </ul>
            </div>
            
            <!-- Mobile CTA -->
            <div class="p-6 border-t border-gray-200 dark:border-gray-700">
                <a 
                    href="#cta" 
                    class="block w-full text-center px-6 py-4 bg-gradient-to-r from-[#022E01] to-[#1a5d1a] text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300"
                >
                    Get Free Consultation
                </a>
            </div>
        </div>
    </div>
</header>

<script>
         // Navbar scroll effect
     document.addEventListener('DOMContentLoaded', function() {
         const navbar = document.getElementById('navbar');
         let lastScrollTop = 0;
         
         if (navbar) {
             window.addEventListener('scroll', function() {
                 const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
                 
                 if (scrollTop > 100) {
                     navbar.classList.add('bg-white/95', 'dark:bg-gray-900/95', 'shadow-lg');
                     navbar.classList.remove('bg-white/80', 'dark:bg-gray-900/80');
                 } else {
                     navbar.classList.remove('bg-white/95', 'dark:bg-gray-900/95', 'shadow-lg');
                     navbar.classList.add('bg-white/80', 'dark:bg-gray-900/80');
                 }
                 
                 lastScrollTop = scrollTop;
             });
         }
         
         // Mobile menu toggle
         const toggleBtn = document.querySelector('[data-toggle-nav]');
         const navbarMenu = document.querySelector('[data-navbar]');
         const overlay = document.querySelector('[data-nav-overlay]');
         const line1 = document.getElementById('line1');
         const line2 = document.getElementById('line2');
         const line3 = document.getElementById('line3');
         
         if (toggleBtn && navbarMenu && overlay && line1 && line2 && line3) {
             toggleBtn.addEventListener('click', function() {
                 const isOpen = toggleBtn.getAttribute('data-open-nav') === 'true';
                 
                 if (isOpen) {
                     // Close menu
                     navbarMenu.classList.remove('translate-x-0');
                     navbarMenu.classList.add('translate-x-full');
                     overlay.classList.remove('opacity-100', 'visible');
                     overlay.classList.add('opacity-0', 'invisible');
                     toggleBtn.setAttribute('data-open-nav', 'false');
                     
                     // Reset hamburger
                     line1.classList.remove('rotate-45', 'translate-y-2');
                     line2.classList.remove('opacity-0');
                     line3.classList.remove('-rotate-45', '-translate-y-2');
                 } else {
                     // Open menu
                     navbarMenu.classList.remove('translate-x-full');
                     navbarMenu.classList.add('translate-x-0');
                     overlay.classList.remove('opacity-0', 'invisible');
                     overlay.classList.add('opacity-100', 'visible');
                     toggleBtn.setAttribute('data-open-nav', 'true');
                     
                     // Animate hamburger
                     line1.classList.add('rotate-45', 'translate-y-2');
                     line2.classList.add('opacity-0');
                     line3.classList.add('-rotate-45', '-translate-y-2');
                 }
             });
             
             // Close menu when clicking overlay
             overlay.addEventListener('click', function() {
                 navbarMenu.classList.remove('translate-x-0');
                 navbarMenu.classList.add('translate-x-full');
                 overlay.classList.remove('opacity-100', 'visible');
                 overlay.classList.add('opacity-0', 'invisible');
                 toggleBtn.setAttribute('data-open-nav', 'false');
                 
                 // Reset hamburger
                 line1.classList.remove('rotate-45', 'translate-y-2');
                 line2.classList.remove('opacity-0');
                 line3.classList.remove('-rotate-45', '-translate-y-2');
             });
         }
        
                 // Mobile dropdown functionality
         const mobileDropdowns = document.querySelectorAll('.mobile-dropdown button');
         mobileDropdowns.forEach((button: Element) => {
             button.addEventListener('click', function(this: Element) {
                 const dropdown = this.nextElementSibling as HTMLElement;
                 const icon = this.querySelector('svg') as SVGElement;
                 
                 if (dropdown && dropdown.classList.contains('hidden')) {
                     dropdown.classList.remove('hidden');
                     if (icon) icon.classList.add('rotate-180');
                 } else if (dropdown) {
                     dropdown.classList.add('hidden');
                     if (icon) icon.classList.remove('rotate-180');
                 }
             });
         });
    });
</script>