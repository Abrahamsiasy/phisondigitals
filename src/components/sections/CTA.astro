---
import BtnLink from "../shared/BtnLink.astro";
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";
import Paragraph from "../shared/Paragraph.astro";
---

<section id="cta" class="py-20 md:py-24 bg-gradient-to-br from-[#0F2E5C] via-[#1554B3] to-[#1E6DEB] text-white relative overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0 bg-gradient-to-br from-[#0F2E5C]/30 via-transparent to-[#1E6DEB]/30"></div>
    
    <!-- Animated background elements -->
    <div class="absolute inset-0">
        <div class="absolute top-10 left-10 w-20 h-20 bg-gradient-to-r from-[#1E6DEB] to-[#0F2E5C] rounded-full opacity-10 animate-pulse"></div>
        <div class="absolute bottom-20 right-20 w-32 h-32 bg-gradient-to-r from-[#0F2E5C] to-[#1E6DEB] rounded-full opacity-10 animate-pulse delay-1000"></div>
        <div class="absolute top-1/2 left-1/4 w-16 h-16 bg-gradient-to-r from-[#1E6DEB] to-[#0F2E5C] rounded-full opacity-10 animate-pulse delay-500"></div>
    </div>
    
    <Container className="relative z-10">
        <div class="text-center max-w-5xl mx-auto">
            <!-- Main heading with enhanced styling -->
            <div class="mb-8">
                <h1 class="text-white font-bold text-3xl sm:text-4xl md:text-5xl lg:text-6xl mb-4 drop-shadow-[0_0_20px_rgba(255,255,255,0.3)] leading-tight">
                    Thank You for Considering Phison Digitals
                </h1>
                <div class="w-24 h-1 bg-gradient-to-r from-[#EAF2FF] to-white mx-auto rounded-full"></div>
            </div>
            
            <!-- Enhanced description -->
            <Paragraph className="text-xl mb-10 text-white/90 max-w-3xl mx-auto leading-relaxed">
                Our comprehensive packages are designed for businesses at different stages of growth. We are committed to
                measurable results, clear reporting, and continuous improvement for your social media presence.
            </Paragraph>
            
            <!-- Enhanced CTA buttons -->
            <div class="flex flex-col sm:flex-row gap-6 justify-center mb-16">
                <a 
                    href="tel:+251989915436" 
                    aria-label="Call Phison Digitals now"
                    class="group inline-flex items-center justify-center gap-3 text-lg px-10 py-5 bg-gradient-to-r from-[#1E6DEB] to-[#1554B3] dark:bg-none dark:bg-[#1E6DEB] dark:hover:bg-[#1554B3] text-white font-bold rounded-full shadow-2xl hover:shadow-[0_20px_40px_rgba(30,109,235,0.4)] transform hover:scale-105 hover:translate-y-[-2px] transition-all duration-300 ease-out"
                >
                    <span>Call Us Now</span>
                    <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </a>
                <a 
                    href="https://t.me/phisondigitals"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label="Open Telegram profile @phisondigitals"
                    class="group inline-flex items-center justify-center gap-3 text-lg px-10 py-5 bg-white text-[#0F2E5C] font-bold rounded-full shadow-2xl hover:shadow-[0_20px_40px_rgba(255,255,255,0.3)] transform hover:scale-105 hover:translate-y-[-2px] transition-all duration-300 ease-out"
                >
                    <span>Text on Telegram</span>
                    <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                </a>
                <a 
                    href="mailto:phisondigitals@gmail.com?subject=Proposal Discussion"
                    aria-label="Send email to phisondigitals@gmail.com"
                    class="group inline-flex items-center justify-center gap-3 text-lg px-10 py-5 border-2 border-white text-white hover:bg-white hover:text-gray-900 font-bold rounded-full shadow-2xl hover:shadow-[0_20px_40px_rgba(255,255,255,0.3)] transform hover:scale-105 hover:translate-y-[-2px] transition-all duration-300 ease-out"
                >
                    <span>Email Us</span>
                    <svg class="w-5 h-5 transform group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                </a>
            </div>
            
            <!-- Enhanced contact cards -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="group bg-white/10 rounded-2xl p-8 backdrop-blur-sm border border-white/20 hover:bg-white/15 hover:border-[#EAF2FF]/70 transition-all duration-300 transform hover:scale-105 hover:translate-y-[-4px]">
                    <div class="w-16 h-16 bg-gradient-to-br from-[#1E6DEB] to-[#0F2E5C] rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <h3 class="font-bold text-xl mb-3">Email Us</h3>
                    <a href="mailto:phisondigitals@gmail.com?subject=Proposal Discussion" aria-label="Email Phison Digitals" class="text-lg text-white/90 hover:text-[#EAF2FF] transition-colors duration-300 font-medium">
                        phisondigitals@gmail.com
                    </a>
                    <p class="text-sm text-white/70 mt-2">Get a response within 24 hours</p>
                </div>
                
                <div class="group bg-white/10 rounded-2xl p-8 backdrop-blur-sm border border-white/20 hover:bg-white/15 hover:border-[#EAF2FF]/70 transition-all duration-300 transform hover:scale-105 hover:translate-y-[-4px]">
                    <div class="w-16 h-16 bg-gradient-to-br from-[#1E6DEB] to-[#0F2E5C] rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                        </svg>
                    </div>
                    <h3 class="font-bold text-xl mb-3">Call Us</h3>
                    <a href="tel:+251989915436" aria-label="Call Phison Digitals primary number" class="text-lg text-white/90 hover:text-[#EAF2FF] transition-colors duration-300 font-medium">
                        0989915436 / 0710826259
                    </a>
                    <p class="text-sm text-white/70 mt-2">Available for campaign consultation</p>
                </div>
                
                <div class="group bg-white/10 rounded-2xl p-8 backdrop-blur-sm border border-white/20 hover:bg-white/15 hover:border-[#EAF2FF]/70 transition-all duration-300 transform hover:scale-105 hover:translate-y-[-4px]">
                    <div class="w-16 h-16 bg-gradient-to-br from-[#1E6DEB] to-[#0F2E5C] rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                    </div>
                    <h3 class="font-bold text-xl mb-3">Telegram</h3>
                    <a href="https://t.me/phisondigitals" target="_blank" rel="noopener noreferrer" aria-label="Open Telegram profile @phisondigitals" class="text-lg text-white/90 hover:text-[#EAF2FF] transition-colors duration-300 font-medium">
                        @phisondigitals
                    </a>
                    <p class="text-sm text-white/70 mt-2">Mainly text us on Telegram</p>
                </div>
            </div>
            
            <!-- Trust indicators -->
            <div class="mt-16 pt-8 border-t border-white/20">
                <p class="text-white/90 text-lg font-semibold mb-6 drop-shadow-[0_0_15px_rgba(255,255,255,0.4)]">Professional support tailored for business growth</p>
                <div class="flex flex-wrap justify-center items-center gap-8">
                    <div class="text-white/90 text-sm font-medium drop-shadow-[0_0_10px_rgba(255,255,255,0.3)] hover:drop-shadow-[0_0_15px_rgba(255,255,255,0.5)] transition-all duration-300">✓ Strategy-Led Execution</div>
                    <div class="text-white/90 text-sm font-medium drop-shadow-[0_0_10px_rgba(255,255,255,0.3)] hover:drop-shadow-[0_0_15px_rgba(255,255,255,0.5)] transition-all duration-300">✓ Clear Monthly Reporting</div>
                    <div class="text-white/90 text-sm font-medium drop-shadow-[0_0_10px_rgba(255,255,255,0.3)] hover:drop-shadow-[0_0_15px_rgba(255,255,255,0.5)] transition-all duration-300">✓ High-Quality Content</div>
                    <div class="text-white/90 text-sm font-medium drop-shadow-[0_0_10px_rgba(255,255,255,0.3)] hover:drop-shadow-[0_0_15px_rgba(255,255,255,0.5)] transition-all duration-300">✓ Growth-Focused Campaigns</div>
                </div>
            </div>
        </div>
    </Container>
</section>
