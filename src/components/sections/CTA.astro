---
import BtnLink from "../shared/BtnLink.astro";
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";
import Paragraph from "../shared/Paragraph.astro";
---

<section id="cta" class="py-20 md:py-24 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white relative overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0 bg-gradient-to-br from-[#022E01]/20 via-transparent to-[#4ade80]/20"></div>
    
    <!-- Animated background elements -->
    <div class="absolute inset-0">
        <div class="absolute top-10 left-10 w-20 h-20 bg-gradient-to-r from-[#022E01] to-[#4ade80] rounded-full opacity-10 animate-pulse"></div>
        <div class="absolute bottom-20 right-20 w-32 h-32 bg-gradient-to-r from-[#4ade80] to-[#022E01] rounded-full opacity-10 animate-pulse delay-1000"></div>
        <div class="absolute top-1/2 left-1/4 w-16 h-16 bg-gradient-to-r from-[#022E01] to-[#4ade80] rounded-full opacity-10 animate-pulse delay-500"></div>
    </div>
    
    <Container className="relative z-10">
        <div class="text-center max-w-5xl mx-auto">
            <!-- Main heading with enhanced styling -->
            <div class="mb-8">
                <h1 class="text-white font-bold text-3xl sm:text-4xl md:text-5xl lg:text-6xl mb-4 drop-shadow-[0_0_20px_rgba(255,255,255,0.3)] leading-tight">
                    Ready to Transform Your Business?
                </h1>
                <div class="w-24 h-1 bg-gradient-to-r from-[#022E01] to-[#4ade80] mx-auto rounded-full"></div>
            </div>
            
            <!-- Enhanced description -->
            <Paragraph className="text-xl mb-10 text-white/90 max-w-3xl mx-auto leading-relaxed">
                Join hundreds of businesses that trust GojoTech to deliver innovative technology solutions. 
                From our flagship GojoShop.et platform to custom software development, get a 
                <span class="text-[#4ade80] font-semibold"> free consultation</span> and discover how we can accelerate your digital transformation.
            </Paragraph>
            
            <!-- Enhanced CTA buttons -->
            <div class="flex flex-col sm:flex-row gap-6 justify-center mb-16">
                <a 
                    href="mailto:info@gojotech.et?subject=Free Consultation Request" 
                    class="group inline-flex items-center justify-center gap-3 text-lg px-10 py-5 bg-gradient-to-r from-[#022E01] to-[#1a5d1a] text-white font-bold rounded-full shadow-2xl hover:shadow-[0_20px_40px_rgba(2,46,1,0.4)] transform hover:scale-105 hover:translate-y-[-2px] transition-all duration-300 ease-out"
                >
                    <span>Get Free Consultation</span>
                    <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </a>
                <a 
                    href="/services/gojoshop" 
                    class="group inline-flex items-center justify-center gap-3 text-lg px-10 py-5 bg-gradient-to-r from-[#4ade80] to-[#22c55e] text-gray-900 font-bold rounded-full shadow-2xl hover:shadow-[0_20px_40px_rgba(74,222,128,0.4)] transform hover:scale-105 hover:translate-y-[-2px] transition-all duration-300 ease-out"
                >
                    <span>Explore GojoShop.et</span>
                    <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                </a>
                <a 
                    href="tel:+251982808182" 
                    class="group inline-flex items-center justify-center gap-3 text-lg px-10 py-5 border-2 border-white text-white hover:bg-white hover:text-gray-900 font-bold rounded-full shadow-2xl hover:shadow-[0_20px_40px_rgba(255,255,255,0.3)] transform hover:scale-105 hover:translate-y-[-2px] transition-all duration-300 ease-out"
                >
                    <span>Call Us Now</span>
                    <svg class="w-5 h-5 transform group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                </a>
            </div>
            
            <!-- Enhanced contact cards -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="group bg-white/10 rounded-2xl p-8 backdrop-blur-sm border border-white/20 hover:bg-white/15 hover:border-[#4ade80]/50 transition-all duration-300 transform hover:scale-105 hover:translate-y-[-4px]">
                    <div class="w-16 h-16 bg-gradient-to-br from-[#022E01] to-[#4ade80] rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <h3 class="font-bold text-xl mb-3">Email Us</h3>
                    <a href="mailto:info@gojotech.et" class="text-lg text-white/90 hover:text-[#4ade80] transition-colors duration-300 font-medium">
                        info@gojotech.et
                    </a>
                    <p class="text-sm text-white/70 mt-2">Get a response within 24 hours</p>
                </div>
                
                <div class="group bg-white/10 rounded-2xl p-8 backdrop-blur-sm border border-white/20 hover:bg-white/15 hover:border-[#4ade80]/50 transition-all duration-300 transform hover:scale-105 hover:translate-y-[-4px]">
                    <div class="w-16 h-16 bg-gradient-to-br from-[#022E01] to-[#4ade80] rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                        </svg>
                    </div>
                    <h3 class="font-bold text-xl mb-3">Call Us</h3>
                    <a href="tel:+251982808182" class="text-lg text-white/90 hover:text-[#4ade80] transition-colors duration-300 font-medium">
                        +251 982 808 182
                    </a>
                    <p class="text-sm text-white/70 mt-2">Available Mon-Fri, 9AM-6PM</p>
                </div>
                
                <div class="group bg-white/10 rounded-2xl p-8 backdrop-blur-sm border border-white/20 hover:bg-white/15 hover:border-[#4ade80]/50 transition-all duration-300 transform hover:scale-105 hover:translate-y-[-4px]">
                    <div class="w-16 h-16 bg-gradient-to-br from-[#022E01] to-[#4ade80] rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                    </div>
                    <h3 class="font-bold text-xl mb-3">Visit Us</h3>
                    <p class="text-lg text-white/90 font-medium">Addis Ababa, Ethiopia</p>
                    <p class="text-sm text-white/70 mt-2">Schedule an in-person meeting</p>
                </div>
            </div>
            
            <!-- Trust indicators -->
            <div class="mt-16 pt-8 border-t border-white/20">
                <p class="text-white/90 text-lg font-semibold mb-6 drop-shadow-[0_0_15px_rgba(255,255,255,0.4)]">Trusted by businesses across Ethiopia</p>
                <div class="flex flex-wrap justify-center items-center gap-8">
                    <div class="text-white/90 text-sm font-medium drop-shadow-[0_0_10px_rgba(255,255,255,0.3)] hover:drop-shadow-[0_0_15px_rgba(255,255,255,0.5)] transition-all duration-300">✓ Free Consultation</div>
                    <div class="text-white/90 text-sm font-medium drop-shadow-[0_0_10px_rgba(255,255,255,0.3)] hover:drop-shadow-[0_0_15px_rgba(255,255,255,0.5)] transition-all duration-300">✓ No Hidden Fees</div>
                    <div class="text-white/90 text-sm font-medium drop-shadow-[0_0_10px_rgba(255,255,255,0.3)] hover:drop-shadow-[0_0_15px_rgba(255,255,255,0.5)] transition-all duration-300">✓ 24/7 Support</div>
                    <div class="text-white/90 text-sm font-medium drop-shadow-[0_0_10px_rgba(255,255,255,0.3)] hover:drop-shadow-[0_0_15px_rgba(255,255,255,0.5)] transition-all duration-300">✓ 100% Satisfaction</div>
                </div>
            </div>
        </div>
    </Container>
</section>
