---
import BtnLink from "../shared/BtnLink.astro";
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";
import Paragraph from "../shared/Paragraph.astro";
---

<section id="cta" class="py-16 md:py-20 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white relative overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0 bg-gradient-to-br from-[#022E01]/20 via-transparent to-[#f9a825]/20"></div>
    
    <Container className="relative z-10">
        <div class="text-center max-w-4xl mx-auto">
            <h1 class="text-white font-semibold text-2xl sm:text-3xl md:text-4xl mb-6 drop-shadow-[0_0_15px_rgba(255,255,255,0.4)]">
                Ready to Transform Your Business?
            </h1>
            
            <Paragraph className="text-lg mb-8 text-white/90">
                Let's discuss how GojoTech can help you achieve your technology goals. 
                Get a free consultation and discover the perfect solution for your business needs.
            </Paragraph>
            
            <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
                <BtnLink 
                    text="Get Free Consultation" 
                    href="mailto:info@gojotech.et?subject=Free Consultation Request" 
                    variant="secondary"
                    className="text-base px-8 py-4 bg-white text-gray-900 hover:bg-gray-100 font-semibold"
                />
                <a 
                    href="tel:+251982808182" 
                    class="inline-flex items-center justify-center text-base px-8 py-4 border-2 border-white text-white hover:bg-white hover:text-gray-900 font-semibold rounded-full transition-all duration-300 hover:scale-105"
                >
                    Call Us Now
                </a>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
                <div class="bg-white/10 rounded-xl p-6 backdrop-blur-sm border border-white/20 hover:bg-white/15 transition-all duration-300">
                    <div class="text-3xl mb-3">üìß</div>
                    <h3 class="font-semibold mb-2">Email Us</h3>
                    <p class="text-sm text-white/80">info@gojotech.et</p>
                </div>
                
                <div class="bg-white/10 rounded-xl p-6 backdrop-blur-sm border border-white/20 hover:bg-white/15 transition-all duration-300">
                    <div class="text-3xl mb-3">üìû</div>
                    <h3 class="font-semibold mb-2">Call Us</h3>
                    <p class="text-sm text-white/80">+251 982 808 182</p>
                </div>
                
                <div class="bg-white/10 rounded-xl p-6 backdrop-blur-sm border border-white/20 hover:bg-white/15 transition-all duration-300">
                    <div class="text-3xl mb-3">üìç</div>
                    <h3 class="font-semibold mb-2">Visit Us</h3>
                    <p class="text-sm text-white/80">Addis Ababa, Ethiopia</p>
                </div>
            </div>
        </div>
    </Container>
</section>
