---
import BtnLink from "../shared/BtnLink.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";
---

<section class="pt-32 pb-16 md:pt-40 md:pb-20">
    <Container>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <div class="text-center lg:text-left">
                <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#EAF2FF] dark:bg-[#1E6DEB]/20 text-[#1E6DEB] dark:text-[#EAF2FF] text-sm font-medium mb-6">
                    <span class="w-2 h-2 bg-[#1E6DEB] dark:bg-[#EAF2FF] rounded-full"></span>
                    Proposal for Diva Jewellery
                </div>
                
                <Title as="h1" className="mb-6 text-4xl md:text-5xl lg:text-6xl">
                    Grow Your Brand with
                    <span class="text-[#1E6DEB] dark:text-[#EAF2FF]"> Phison Digitals</span>
                </Title>
                
                <Paragraph className="text-lg md:text-xl mb-8 text-heading-3 max-w-2xl mx-auto lg:mx-0">
                    Phison Digitals is a results-driven social media marketing agency helping businesses grow with high-converting content and audience engagement. With 3+ years of hands-on experience, we build tailored strategies that increase awareness, drive traffic, and boost sales.
                </Paragraph>
                
                <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
                    <BtnLink 
                        text="Get Started" 
                        href="tel:+251989915436" 
                        variant="primary"
                        className="text-base px-8 py-4"
                    />
                    <BtnLink 
                        text="View Services" 
                        href="#services" 
                        variant="secondary"
                        className="text-base px-8 py-4"
                    />
                </div>
                
                <div class="flex items-center justify-center lg:justify-start gap-8 mt-12 text-sm text-heading-3">
                    <div class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-[#1E6DEB] dark:text-[#EAF2FF]" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                        <span>3+ Years Experience</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-[#1E6DEB] dark:text-[#EAF2FF]" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                        <span>Results-Driven Strategy</span>
                    </div>
                </div>
            </div>
            
            <div class="relative">
                <div class="relative z-10">
                    <img 
                        src="/images/nebil-min_1.png" 
                        alt="Phison Digitals team"
                        class="w-[70%] mx-auto h-[4rem] lg:h-[5rem] xl:h-[6rem] rounded-2xl shadow-2xl object-cover"
                        loading="lazy"
                    />
                </div>
                
                <!-- Floating elements for visual appeal -->
                <div class="absolute -top-4 -right-4 bg-white dark:bg-box-bg rounded-xl p-4 shadow-lg border border-box-border">
                    <div class="flex items-center gap-3">
                        <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                        <span class="text-sm font-medium text-heading-2">Campaign Active</span>
                    </div>
                </div>
                
                <div class="absolute -bottom-4 -left-4 bg-[#1E6DEB] dark:bg-[#0F2E5C] text-white rounded-xl p-4 shadow-lg">
                    <div class="text-center">
                        <div class="text-2xl font-bold">6</div>
                        <div class="text-xs opacity-90">Core Services</div>
                    </div>
                </div>
            </div>
        </div>
    </Container>
</section>