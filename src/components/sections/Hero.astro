---
import BtnLink from "../shared/BtnLink.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";
---

<section class="pt-32 pb-16 md:pt-40 md:pb-20">
    <Container>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <div class="text-center lg:text-left">
                <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#022E01]/10 dark:bg-[#4ade80]/20 text-[#022E01] dark:text-[#4ade80] text-sm font-medium mb-6">
                    <span class="w-2 h-2 bg-[#022E01] dark:bg-[#4ade80] rounded-full"></span>
                    Ethiopia's Premier Tech Solutions Provider
                </div>
                
                <Title className="mb-6 text-4xl md:text-5xl lg:text-6xl">
                    Transform Your Business with 
                    <span class="text-[#022E01] dark:text-[#4ade80] dark:drop-shadow-[0_0_8px_rgba(74,222,128,0.3)]"> Innovative Technology</span>
                </Title>
                
                <Paragraph className="text-lg md:text-xl mb-8 text-heading-3 max-w-2xl mx-auto lg:mx-0">
                    GojoTech delivers cutting-edge software solutions, foreign consulting services, and e-commerce platforms that drive growth for Ethiopian businesses. From custom development to business setup, we're your trusted technology partner.
                </Paragraph>
                
                <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
                    <BtnLink 
                        text="Start Your Project" 
                        href="#cta" 
                        variant="primary"
                        className="text-base px-8 py-4"
                    />
                    <BtnLink 
                        text="View Our Services" 
                        href="#services" 
                        variant="secondary"
                        className="text-base px-8 py-4"
                    />
                </div>
                
                <div class="flex items-center justify-center lg:justify-start gap-8 mt-12 text-sm text-heading-3">
                    <div class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-[#022E01] dark:text-[#4ade80]" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                        <span>100+ Projects Completed</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-[#022E01] dark:text-[#4ade80]" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                        <span>24/7 Support</span>
                    </div>
                </div>
            </div>
            
            <div class="relative">
                <div class="relative z-10">
                    <img 
                        src="/images/dev-with-c.webp" 
                        alt="GojoTech Development Team" 
                        class="w-full h-auto rounded-2xl shadow-2xl"
                        loading="lazy"
                    />
                </div>
                
                <!-- Floating elements for visual appeal -->
                <div class="absolute -top-4 -right-4 bg-white dark:bg-box-bg rounded-xl p-4 shadow-lg border border-box-border">
                    <div class="flex items-center gap-3">
                        <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                        <span class="text-sm font-medium text-heading-2">Live Project</span>
                    </div>
                </div>
                
                <div class="absolute -bottom-4 -left-4 bg-[#022E01] dark:bg-[#4ade80] text-white dark:text-gray-900 rounded-xl p-4 shadow-lg">
                    <div class="text-center">
                        <div class="text-2xl font-bold">50+</div>
                        <div class="text-xs opacity-90">Happy Clients</div>
                    </div>
                </div>
            </div>
        </div>
    </Container>
</section>