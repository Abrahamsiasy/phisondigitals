---
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";
import Paragraph from "../shared/Paragraph.astro";
---

<section class="py-16 md:py-20">
    <Container>
        <div class="text-center mb-16">
            <Title className="mb-4 animate-fade-in">
                Frequently Asked Questions
            </Title>
            <Paragraph className="text-lg animate-fade-in-delay">
                Answers to common questions about Phison Digitals services
            </Paragraph>
        </div>

        <div class="max-w-6xl mx-auto">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Left Column -->
                <div class="space-y-4">
                    <!-- FAQ Item 1 -->
                    <div class="faq-item bg-white dark:bg-box-bg rounded-xl p-5 shadow-sm border border-gray-100 dark:border-gray-800 hover:shadow-md transition-all duration-300 hover:scale-[1.02] animate-slide-up">
                        <button class="faq-toggle flex justify-between items-center w-full text-left group" data-faq="1">
