---
import Container from "../shared/Container.astro";
---

<section class="py-16 md:py-20 bg-box-bg">
    <Container>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
            <div class="group">
                <div class="text-3xl md:text-4xl font-bold text-[#1E6DEB] dark:text-[#EAF2FF] mb-2 group-hover:scale-110 transition-transform duration-300">
                    3+
                </div>
                <div class="text-sm md:text-base text-heading-3">
                    Years Experience
                </div>
            </div>
            
            <div class="group">
                <div class="text-3xl md:text-4xl font-bold text-[#1E6DEB] dark:text-[#EAF2FF] mb-2 group-hover:scale-110 transition-transform duration-300">
                    6
                </div>
                <div class="text-sm md:text-base text-heading-3">
                    Core Services
                </div>
            </div>
            
            <div class="group">
                <div class="text-3xl md:text-4xl font-bold text-[#1E6DEB] dark:text-[#EAF2FF] mb-2 group-hover:scale-110 transition-transform duration-300">
                    4
                </div>
                <div class="text-sm md:text-base text-heading-3">
                    Service Packages
                </div>
            </div>
            
            <div class="group">
                <div class="text-3xl md:text-4xl font-bold text-[#1E6DEB] dark:text-[#EAF2FF] mb-2 group-hover:scale-110 transition-transform duration-300">
                    100K+
                </div>
                <div class="text-sm md:text-base text-heading-3">
                    Campaign Reach Potential
                </div>
            </div>
        </div>
    </Container>
</section>
