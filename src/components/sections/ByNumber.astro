---
import Container from "../shared/Container.astro";
---

<section class="py-16 md:py-20 bg-box-bg">
    <Container>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
            <div class="group">
                <div class="text-3xl md:text-4xl font-bold text-[#022E01] dark:text-[#4ade80] dark:drop-shadow-[0_0_8px_rgba(74,222,128,0.3)] mb-2 group-hover:scale-110 transition-transform duration-300">
                    50+
                </div>
                <div class="text-sm md:text-base text-heading-3">
                    Projects Completed
                </div>
            </div>
            
            <div class="group">
                <div class="text-3xl md:text-4xl font-bold text-[#022E01] dark:text-[#4ade80] dark:drop-shadow-[0_0_8px_rgba(74,222,128,0.3)] mb-2 group-hover:scale-110 transition-transform duration-300">
                    25+
                </div>
                <div class="text-sm md:text-base text-heading-3">
                    Happy Clients
                </div>
            </div>
            
            <div class="group">
                <div class="text-3xl md:text-4xl font-bold text-[#022E01] dark:text-[#4ade80] dark:drop-shadow-[0_0_8px_rgba(74,222,128,0.3)] mb-2 group-hover:scale-110 transition-transform duration-300">
                    3+
                </div>
                <div class="text-sm md:text-base text-heading-3">
                    Years Experience
                </div>
            </div>
            
            <div class="group">
                <div class="text-3xl md:text-4xl font-bold text-[#022E01] dark:text-[#4ade80] dark:drop-shadow-[0_0_8px_rgba(74,222,128,0.3)] mb-2 group-hover:scale-110 transition-transform duration-300">
                    24/7
                </div>
                <div class="text-sm md:text-base text-heading-3">
                    Support Available
                </div>
            </div>
        </div>
    </Container>
</section>
