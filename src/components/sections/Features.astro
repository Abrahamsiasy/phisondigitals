---
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";
import Paragraph from "../shared/Paragraph.astro";
import { features } from "../../utils/data.ts";
---

<section id="features" class="py-16 md:py-20 bg-box-bg">
    <Container>
        <div class="text-center mb-16">
            <Title className="mb-4">
                Why Choose GojoTech?
            </Title>
            <Paragraph className="text-lg max-w-3xl mx-auto">
                We combine local market expertise with cutting-edge technology to deliver solutions that work for Ethiopian businesses.
            </Paragraph>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {features.map((feature, index) => (
                <div class="group bg-white dark:bg-box-bg rounded-xl p-6 shadow-sm border border-gray-100 dark:border-gray-800 hover:shadow-lg transition-all duration-300 hover:scale-[1.02] relative overflow-hidden">
                    <!-- Subtle hover background -->
                    <div class="absolute inset-0 bg-[#022E01]/5 dark:bg-[#4ade80]/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    
                    <div class="flex items-start gap-4 relative z-10">
                        <div class="flex-shrink-0 w-10 h-10 bg-[#022E01]/10 dark:bg-[#4ade80]/20 rounded-lg flex items-center justify-center text-xl group-hover:bg-[#022E01]/20 dark:group-hover:bg-[#4ade80]/30 transition-colors duration-300">
                            {feature.icon}
                        </div>
                        
                        <div class="flex-1">
                            <h3 class="text-lg font-bold mb-3 text-gray-900 dark:text-white group-hover:text-[#022E01] dark:group-hover:text-[#4ade80] transition-colors duration-200">
                                {feature.title}
                            </h3>
                            
                            <p class="text-sm text-heading-3 leading-relaxed">
                                {feature.description}
                            </p>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </Container>
</section>