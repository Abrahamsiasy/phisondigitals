---
import Footer from "../components/elements/Footer.astro";
import Navbar from "../components/elements/Navbar.astro";
import "../styles/global.css";

export interface Props {
  title: string;
  description?: string;
  keywords?: string;
  canonical?: string;
}

const { 
  title, 
  description = "Phison Digitals is a modern social media marketing agency delivering strategy, content creation, community engagement, and performance-focused campaigns.", 
  keywords = "Phison Digitals, social media marketing, strategy development, content creation, community engagement, social media advertising, analytics reporting, digital marketing agency",
  canonical 
} = Astro.props;

const fullTitle = `${title} | Phison Digitals`;
const fullDescription = description;
const fullKeywords = keywords;
const canonicalUrl = canonical || Astro.url.href;
const siteOrigin = new URL(canonicalUrl).origin;
const socialImageUrl = new URL("/logos/phison-logo.png", siteOrigin).toString();

const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "Phison Digitals",
  alternateName: "Phison Digitals",
  url: siteOrigin,
  logo: socialImageUrl,
  description:
    "Results-driven social media marketing agency delivering strategy, content creation, engagement, and advertising services.",
  foundingDate: "2022",
  address: {
    "@type": "PostalAddress",
    addressCountry: "ET",
    addressLocality: "Addis Ababa",
  },
  contactPoint: {
    "@type": "ContactPoint",
    telephone: "+251-989-915-436",
    contactType: "customer service",
    email: "phisondigitals@gmail.com",
    availableLanguage: ["English", "Amharic"],
  },
  hasOfferCatalog: {
    "@type": "OfferCatalog",
    name: "Social Media Marketing Services",
    itemListElement: [
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Service",
          name: "Strategy Development",
          description: "Market research, goal setting, and content planning for social media growth",
        },
      },
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Service",
          name: "Content Creation",
          description: "Visual and written content designed for engagement and conversion",
        },
      },
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Service",
          name: "Social Media Advertising",
          description: "Targeted ad campaigns with optimization and performance reporting",
        },
      },
    ],
  },
  sameAs: [siteOrigin],
  areaServed: {
    "@type": "Country",
    name: "Ethiopia",
  },
  serviceArea: {
    "@type": "Country",
    name: "Ethiopia",
  },
};

const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  name: "Phison Digitals",
  image: socialImageUrl,
  description: "Professional social media marketing agency",
  address: {
    "@type": "PostalAddress",
    addressCountry: "ET",
    addressLocality: "Addis Ababa",
  },
  url: siteOrigin,
  telephone: "+251-989-915-436",
  priceRange: "$$",
  openingHours: "Mo-Fr 09:00-18:00",
  currenciesAccepted: "ETB, USD",
  paymentAccepted: "Cash, Credit Card, Bank Transfer",
};
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/logos/phison-logo.png" />
    <link rel="shortcut icon" type="image/png" href="/logos/phison-logo.png" />
    <link rel="apple-touch-icon" href="/logos/phison-logo.png" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta name="description" content={fullDescription} />
    <meta name="keywords" content={fullKeywords} />
    <meta name="author" content="Phison Digitals" />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="language" content="English" />
    <meta name="geo.region" content="ET" />
    <meta name="geo.placename" content="Ethiopia" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={fullDescription} />
    <meta property="og:image" content={socialImageUrl} />
    <meta property="og:image:width" content="640" />
    <meta property="og:image:height" content="640" />
    <meta property="og:image:alt" content="Phison Digitals logo" />
    <meta property="og:site_name" content="Phison Digitals" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:locale:alternate" content="am_ET" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalUrl} />
    <meta property="twitter:title" content={fullTitle} />
    <meta property="twitter:description" content={fullDescription} />
    <meta property="twitter:image" content={socialImageUrl} />
    <meta property="twitter:creator" content="@phisondigitals" />
    <meta property="twitter:site" content="@phisondigitals" />

    <!-- Additional SEO Meta Tags -->
    <meta name="theme-color" content="#1E6DEB" />
    <meta name="msapplication-TileColor" content="#1E6DEB" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="Phison Digitals" />
    <meta name="application-name" content="Phison Digitals" />
    <meta name="msapplication-TileImage" content="/logos/phison-logo.png" />
    <meta name="msapplication-config" content="/browserconfig.xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preload" as="image" href="/logos/phison-logo.png" />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />

    <!-- Local Business Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} />

    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Raleway:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="overflow-hidden overflow-y-auto bg-body">
    <Navbar />
    <slot />
    <Footer />
  </body>
  <script>
    // Theme switching with error handling
    try {
      const switchTheme = document.querySelector(
        "[data-switch-theme]"
      ) as HTMLButtonElement;

      if (
        localStorage.getItem("appTheme") === "dark" ||
        (!("appTheme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
      
      if (switchTheme) {
        switchTheme.addEventListener("click", (e) => {
          e.preventDefault();
          const doc = document.documentElement;
          if (doc) {
            if (localStorage.getItem("appTheme")) {
              if (localStorage.getItem("appTheme") === "light") {
                doc.classList.add("dark");
                localStorage.setItem("appTheme", "dark");
              } else {
                document.documentElement.classList.remove("dark");
                localStorage.setItem("appTheme", "light");
              }
            } else {
              if (doc.classList.contains("dark")) {
                doc.classList.remove("dark");
                localStorage.setItem("appTheme", "light");
              } else {
                doc.classList.add("dark");
                localStorage.setItem("appTheme", "dark");
              }
            }
          }
        });
      }
    } catch (error) {
      console.error('Theme switching failed:', error);
    }
  </script>
</html>
<style is:global>
  /* Consolidated CSS variables - moved from global.css to avoid duplication */
  :root {
    --color-bg: 255 255 255;
    --color-border: 255 255 255;
    --color-box: 255 255 255;
    --box-border: 229 231 235;
    --box-sd: 226 232 240 / 0.5;
    --heading-1: 15 46 92;
    --heading-2: 26 26 26;
    --heading-3: 107 114 128;
  }

  .dark {
    --color-bg: 3 7 18;
    --color-box: 17 24 39;
    --box-border: 243 244 246/0.1;
    --box-sd: transparent;
    --heading-1: 255 255 255;
    --heading-2: 243 244 246;
    --heading-3: 209 213 219;
  }

  html{
    scroll-behavior: smooth;
  }
  body {
    font-family: "Inter", "Raleway", sans-serif;
  }

</style>
