---
import Layout from '../../layouts/Layout.astro';
import Container from '../../components/shared/Container.astro';
import Title from '../../components/shared/Title.astro';
import Paragraph from '../../components/shared/Paragraph.astro';
---

<Layout title="Foreign Consulting" description="Expert foreign consulting services for international business expansion, market entry, and global partnerships. Professional consulting from GojoTech PLC.">
    <main class="pt-32 lg:pt-36">
        <Container>
            <!-- Hero Section -->
            <div class="text-center max-w-4xl mx-auto mb-16">
                <Title>
                    Foreign Consulting Services
                </Title>
                <Paragraph className="mt-8 text-lg">
                    Expert guidance for international business expansion, market entry strategies, and global partnership development.
                </Paragraph>
            </div>

            

            <!-- Detailed Services Section -->
            <div class="mb-16">
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white text-center mb-12">Comprehensive Consulting Services</h2>
                <div class="grid lg:grid-cols-1 gap-8">
                    <div class="bg-white dark:bg-gray-900 rounded-2xl p-8 border border-gray-200 dark:border-gray-700 shadow-lg hover:shadow-xl transition-all duration-300">
                        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-6">Our Consulting Expertise</h3>
                        <div class="grid md:grid-cols-2 gap-8">
                            <div class="space-y-6">
                                <div class="flex items-start gap-4 group">
                                    <div class="w-10 h-10 bg-gradient-to-br from-[#022E01] to-[#4ade80] rounded-xl flex items-center justify-center mt-1 shadow-lg group-hover:scale-110 transition-transform duration-300">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6 text-white">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                                        </svg>
                                    </div>
                                    <div>
                                        <h4 class="font-bold text-gray-900 dark:text-white text-lg">Market Research & Analysis</h4>
                                        <p class="text-gray-600 dark:text-gray-300 text-sm mt-2">Comprehensive market research and competitive analysis for target markets</p>
                                    </div>
                                </div>
                                <div class="flex items-start gap-4 group">
                                    <div class="w-10 h-10 bg-gradient-to-br from-[#022E01] to-[#4ade80] rounded-xl flex items-center justify-center mt-1 shadow-lg group-hover:scale-110 transition-transform duration-300">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6 text-white">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                                        </svg>
                                    </div>
                                    <div>
                                        <h4 class="font-bold text-gray-900 dark:text-white text-lg">Business Model Development</h4>
                                        <p class="text-gray-600 dark:text-gray-300 text-sm mt-2">Customized business models and validation strategies</p>
                                    </div>
                                </div>
                                <div class="flex items-start gap-4 group">
                                    <div class="w-10 h-10 bg-gradient-to-br from-[#022E01] to-[#4ade80] rounded-xl flex items-center justify-center mt-1 shadow-lg group-hover:scale-110 transition-transform duration-300">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6 text-white">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                                        </svg>
                                    </div>
                                    <div>
                                        <h4 class="font-bold text-gray-900 dark:text-white text-lg">Regulatory Compliance</h4>
                                        <p class="text-gray-600 dark:text-gray-300 text-sm mt-2">Guidance on legal requirements and regulatory compliance</p>
                                    </div>
                                </div>
                                <div class="flex items-start gap-4 group">
                                    <div class="w-10 h-10 bg-gradient-to-br from-[#022E01] to-[#4ade80] rounded-xl flex items-center justify-center mt-1 shadow-lg group-hover:scale-110 transition-transform duration-300">
